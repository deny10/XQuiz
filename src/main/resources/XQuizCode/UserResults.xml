##########################################################
##           DISPLAY QUIZ RESPONSE MACRO
##         --------------------------------
##
##         Authors: Zoubir Medjdoub
##
##########################################################
#set($discard  = $xwiki.jsx.use('XQuizCode.WebHome'))
#set($discard  = $xwiki.ssx.use('XQuizCode.WebHome'))
#set($user = $xcontext.macro.params.user)
#set($defaultSpace = "XQuizResults")
## Using a simple local variable for formating localization
#set($local = $services.localization)
## ---------------------------------------------------------------------------------------------------------
## List of response of user
## ---------------------------------------------------------------------------------------------------------
==$local.render('xquiz.userresultsmacro.listquiz') ==
(% id="XQuizContainer" %)(((
#set($xwql = "from doc.object(XQuizCode.QuizResponseClass) as quiz where doc.space = '${defaultSpace}' and quiz.user='$user' order by doc.date")
#set($responseDocs = $services.query.xwql("$xwql").execute())
(% id="XQuizTable" %)
|=$local.render('xquiz.userresultsmacro.results')|=$local.render('xquiz.userresultsmacro.quiz')|=$local.render('xquiz.userresultsmacro.note')|=$local.render('xquiz.userresultsmacro.date')
#foreach($responseDocName in $responseDocs)
  #set($responseDoc = $xwiki.getDocument($responseDocName))
  #set($responseObj = $responseDoc.getObject('XQuizCode.QuizResponseClass'))
  #set($quizDoc = $xwiki.getDocument($responseDoc.get('quiz')))
  |[[$responseDoc]]|$quizDoc.get('quizTitle')|$responseDoc.get('note') % |$xwiki.formatDate($responseDoc.date)
#end
)))
{{/velocity}}</code>
